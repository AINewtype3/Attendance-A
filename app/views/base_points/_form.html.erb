<%= form_with(model: @base_point, local: true) do |f| %>
  <%= render 'shared/error_messages_base', obj: @base_point %>

  <%= f.label :base_point_number, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :base_point_number, class: "form-control" %>

  <%= f.label :base_point_name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :base_point_name, class: "form-control" %>
  
  <%= f.label :attendance_type, class: "label-#{yield(:class_text)}" %>
  <%= f.select :attendance_type, [["出勤","出勤"], ["退勤","退勤"]], { include_blank: "選択して下さい"}, { class: "form-control" } %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>